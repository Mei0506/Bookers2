<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
     <tbody>
       <tr></tr>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
     </tbody>
    </table>
    
    <div>
     <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block", method: :get do %>
      <i class="fa-solid fa-user-gear" aria-hidden="true"></i>
     <% end %>
    </div>
    
   <%= render 'book', books: @books %>
  </div>

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>

        <tr>
         <td>
          <%= link_to user_path(@book.user_id) do %>
           <%= image_tag @user.get_profile_image(80,80) %>
          <% end %>
         </td>
         <td>
          <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
          <% end %>
         </td>
         <td><%= @book.body %></td>
         <td>
         <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
         <% end %>
         </td>
         <td>
         <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
         <% end %>
         </td>
        </tr>

      </tbody>
     </table>

 </div>
</div>