<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @users.get_profile_image(100,100) %>
    <table class="table">
     <tbody>
       <tr></tr>
       <tr>
        <th>name</th>
        <th><%= @users.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @users.introduction %></th>
       </tr>
     </tbody>
    </table>
    
    <div>
     <%= link_to edit_user_path(@users), class: "btn btn-outline-secondary btn-block", method: :get do %>
      <i class="fas fa-user-cog" aria-hidden="true"></i>
     <% end %>
    </div>
    
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @new_book do |f| %>
     <div class="form-group">
      <%= f.label :Title %><br>
      <%= f.text_field :title, class:"form-control" %>
     </div>
     <div class="form-group">
      <%= f.label :opinion %><br>
      <%= f.text_area :body, class:"form-control" %>
     </div>
     <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-md btn-success" %>
     </div>
    <% end %>
  </div>

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>

        <tr>
         <td>
          <%= link_to user_path(@book.user_id) do %>
           <%= image_tag @book.user.get_profile_image(80,80) %><br>
           <%= @book.user.name %>
          <% end %>
         </td>
         <td>
          <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
          <% end %>
         </td>
         <td><%= @book.body %></td>
         <td>
         <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
         <% end %>
         </td>
         <td>
         <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
         <% end %>
         </td>
        </tr>

      </tbody>
     </table>

 </div>
</div>