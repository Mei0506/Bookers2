<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>Editing Book</h1>
   <%= form_with model: @book do |f| %>
    <div>
     <%= f.label :book_title, "Title"  %><br>
     <%= f.text_field :book_title, autofocus: true, id:"inputBookTitle" %>
    </div>
    <div>
     <%= f.label :book_body, "Opinion"  %><br>
     <%= f.text_area :book_body, autofocus: true, id:"inputBookBody"  %>
    </div>
    <div>
     <%= f.submit'Update Book', class:"btn btn-success" %>
    </div>
   <% end %>
   
   <%= link_to "Show", book_path(@book) %>
