<div class="col-md-3">
<h2 calss="mt-3">New Book</h2>
<%= form_with model: @book do |f| %>
<div class="form-group">
 <label for="book_title">Title</label>
 <%= f.text_field :title, class:"form-control book_title", placeholder:"Title" %>
</div>
<div class="form-group">
 <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, class:"form-control book_body", placeholder:"opinion" %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
</div>
<% end %>
</div>