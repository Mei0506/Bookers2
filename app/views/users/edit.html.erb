<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

   <% if @user.errors.any? %>
    <%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

   <h2>User info</h2>
   <%= form_with model: @user do |f| %>
    <div>
     <%= f.label :name %><br>
     <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %><br>
    </div>
    <div>
     <%= f.label :profile_image, "Image" %><br>
     <%= f.file_field :profile_image, accept: "Image/*"  %><br>
    </div>
    <div>
     <%= f.label :introduction %><br>
     <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %><br>
    </div>
    <div>
     <%= f.submit'Update User', class:"btn btn-secondary" %>
    </div>
   <% end %>
   
  </div>
 </div>
</div>