<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
     <tbody>
       <tr></tr>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
     </tbody>
    </table>
  </div>
 </div>



<div class="col-md-3">
<h2 calss="mt-3">New Book</h2>
<%= form_with model: @book do |f| %>
<div class="form-group">
 <label for="book_title">Title</label>
 <%= f.text_field :title, class:"form-control book_title", placeholder:"Title" %>
</div>
<div class="form-group">
 <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, class:"form-control book_body", placeholder:"opinion" %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
</div>
</div>
<% end %>
</div>


<% @books.each do |book| %>
<div>
 <%= link_to book_path(book.id) do %>
 <% end %>
 <%= image_tag book.user.get_profile_image(100,100) %>
 <%= book.user.name %>
 <%= book.title %>
 <%= book.body %>
</div>
<% end %>