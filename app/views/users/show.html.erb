<div>
 <h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <h3><%= @user.name %></h3>
</div>

<div>
<h2>New Book</h1>
<%= form_with model: @book do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Opinion</p>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
</div>
<% end %>

<% @books.each do |book| %>
<div>
 <%= link_to book_path(book.id) do %>
 <% end %>
 <%= image_tag book.user.get_profile_image(100,100) %>
 <%= book.user.name %>
 <%= book.title %>
 <%= book.body %>
</div>
<% end %>